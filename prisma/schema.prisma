generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String    @unique
  password String
  batch    String
  bookings Booking[]
}

enum BookingType {
  DESIGNATED
  FLOATING
  RELEASED
}

model Booking {
  id      String      @id @default(auto()) @map("_id") @db.ObjectId
  userId  String      @db.ObjectId
  user    User        @relation(fields: [userId], references: [id])
  date    DateTime
  type    BookingType
  
  @@unique([userId, date])
}
